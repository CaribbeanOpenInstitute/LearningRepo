<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SplashLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/UWIBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:src="@drawable/uwilogo" />

    <ImageView
        android:id="@+id/UWICrest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/uwimonacrest" />

    <TextView
        android:id="@+id/txtCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/UWIBanner"
        android:layout_alignLeft="@+id/UWICrest"
        android:layout_alignRight="@+id/UWICrest"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:text="@string/app_version_info"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>